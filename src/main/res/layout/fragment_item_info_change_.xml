<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.norman.ordersystem.Item_info_change_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/item_info_change_name"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_below="@+id/item_info_change_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/item_info_change_photo" />

        <Button
            android:text="確認修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_change_made"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="修改資料"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_change_made"
            android:layout_alignLeft="@+id/item_change_made"
            android:layout_alignStart="@+id/item_change_made"
            android:id="@+id/btn_item_info_change" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_info_change_price"
            android:textSize="24sp"
            android:layout_below="@+id/item_info_change_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_info_change_desc"
            android:textSize="18sp"
            android:layout_below="@+id/item_info_change_price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="刪除商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_item_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/item_info_change_photo"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_info_change_price"
            android:layout_toRightOf="@+id/item_info_change_price"
            android:layout_toEndOf="@+id/item_info_change_price"
            android:id="@+id/item_info_change_remain" />
    </RelativeLayout>

</FrameLayout>
